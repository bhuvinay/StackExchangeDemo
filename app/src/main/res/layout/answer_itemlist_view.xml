<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@drawable/trans_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/answer_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Answerbody goes here .." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:textColor="#FF0000FF"
        android:text="@string/click_for_more" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/answer_owner_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center|left"
                android:layout_marginLeft="8dp"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                android:singleLine="true"
                android:text="Owner Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="@drawable/thumbs"/>
            <TextView
                android:id="@+id/answer_score_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="italic"
                android:singleLine="true"
                android:text="Vote" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>